<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp" android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:id="@+id/cover" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="14dp"
        android:padding="6dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:shadowColor="#000"
        android:shadowRadius="10"
        android:textAllCaps="true"
        android:fontFamily="@string/common_google_play_services_restricted_profile_title"
        android:textColor="#fff"
        android:id="@+id/name" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:padding="6dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:shadowColor="#000"
        android:shadowRadius="6"
        android:fontFamily="@string/common_google_play_services_restricted_profile_title"
        android:textColor="#fff"
        android:id="@+id/birthday"
        android:layout_alignBottom="@+id/cover"
        android:layout_alignRight="@+id/cover"
        android:layout_alignEnd="@+id/cover" />
</RelativeLayout>